<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>

<ul class="list-inline">
  <li><%= dose.ingredient.name %></li>
  <li><%= dose.description %></li>
  <li><%= link_to "Eugh! disgusting", dose_path(dose), method: :delete, class: "btn btn-primary"%></li>
</ul>

<% end %>

<%= render 'doses/form' %>

<%= link_to "back to the list", cocktails_path, class: "btn btn-primary" %>
